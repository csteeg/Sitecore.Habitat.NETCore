@{ var useStaticPlaceholderNames = ViewBag.RenderingParameters == null || ViewBag.RenderingParameters.UseStaticPlaceholderNames != true; }
<div class="container@(ViewBag?.RenderingParameters?.IsFluid == true ? "-fluid" : "" )">
  <div class="row">
    <div class="col-lg-6 col-md-12">
      <cms-placeholder name="col-wide-1" isdynamic="@(!useStaticPlaceholderNames)" />
    </div>
    <div class="col-lg-3 col-sm-6">
      <cms-placeholder name="col-narrow-1" isdynamic="@(!useStaticPlaceholderNames)" />
    </div>
    <div class="col-lg-3 col-sm-6">
      <cms-placeholder name="col-narrow-2" isdynamic="@(!useStaticPlaceholderNames)" />
    </div>
  </div>
</div>